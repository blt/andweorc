#!/usr/bin/env bash
# Pre-push hook for andweorc Rust project
#
# This hook runs comprehensive checks before pushing:
# - cargo fmt --check: Ensure code is properly formatted
# - cargo clippy: Run full linter
# - cargo test: Run the test suite
#
# This is more thorough than pre-commit to catch issues before they
# reach the remote repository.
#
# Install with:
#   git config core.hooksPath .githooks
#
# Or copy to .git/hooks/:
#   cp .githooks/pre-push .git/hooks/pre-push
#   chmod +x .git/hooks/pre-push

set -o errexit
set -o nounset
set -o pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-push checks...${NC}"

# Get the repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# Use CI scripts if available
CI_DIR="$REPO_ROOT/ci"

# Run format check
echo ">>> Checking code formatting..."
if [ -x "$CI_DIR/fmt" ]; then
    if ! "$CI_DIR/fmt"; then
        echo -e "${RED}ERROR: Code is not properly formatted${NC}"
        exit 1
    fi
else
    if ! cargo fmt --all -- --check; then
        echo -e "${RED}ERROR: Code is not properly formatted${NC}"
        exit 1
    fi
fi
echo -e "${GREEN}Format check passed${NC}"

# Run cargo check (fast compilation check)
echo ">>> Running cargo check..."
if [ -x "$CI_DIR/check" ]; then
    if ! "$CI_DIR/check"; then
        echo -e "${RED}ERROR: Compilation failed${NC}"
        exit 1
    fi
else
    if ! cargo check --all-features; then
        echo -e "${RED}ERROR: Compilation failed${NC}"
        exit 1
    fi
fi
echo -e "${GREEN}Compilation check passed${NC}"

# Run clippy
echo ">>> Running clippy..."
if [ -x "$CI_DIR/clippy" ]; then
    if ! "$CI_DIR/clippy"; then
        echo -e "${RED}ERROR: Clippy found issues${NC}"
        exit 1
    fi
else
    if ! cargo clippy --all-features -- -D warnings; then
        echo -e "${RED}ERROR: Clippy found issues${NC}"
        exit 1
    fi
fi
echo -e "${GREEN}Clippy check passed${NC}"

# Run tests
echo ">>> Running tests..."
if [ -x "$CI_DIR/test" ]; then
    if ! "$CI_DIR/test"; then
        echo -e "${RED}ERROR: Tests failed${NC}"
        exit 1
    fi
else
    if ! cargo test --all-features; then
        echo -e "${RED}ERROR: Tests failed${NC}"
        exit 1
    fi
fi
echo -e "${GREEN}Tests passed${NC}"

echo -e "${GREEN}All pre-push checks passed!${NC}"
