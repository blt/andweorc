#!/usr/bin/env bash
# Pre-commit hook for andweorc Rust project
#
# This hook runs fast checks before each commit:
# - cargo fmt --check: Ensure code is properly formatted
# - cargo clippy: Run linter on changed files
#
# Install with:
#   git config core.hooksPath .githooks
#
# Or copy to .git/hooks/:
#   cp .githooks/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit

set -o errexit
set -o nounset
set -o pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Get the repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# Check if we have Rust files staged
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -z "$RUST_FILES" ]; then
    echo -e "${GREEN}No Rust files staged, skipping Rust checks${NC}"
    exit 0
fi

# Run cargo fmt check (fast)
echo ">>> Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo -e "${RED}ERROR: Code is not properly formatted${NC}"
    echo "Run 'cargo fmt' to fix formatting issues"
    exit 1
fi
echo -e "${GREEN}Format check passed${NC}"

# Run cargo clippy on changed crates (faster than all crates)
echo ">>> Running clippy..."
# Determine which crates have changes
CHANGED_CRATES=""
for file in $RUST_FILES; do
    # Extract crate name from path (first directory component)
    crate=$(echo "$file" | cut -d'/' -f1)
    case "$crate" in
        andweorc|andweorc-macros|cargo-andweorc)
            if ! echo "$CHANGED_CRATES" | grep -q "$crate"; then
                CHANGED_CRATES="$CHANGED_CRATES $crate"
            fi
            ;;
    esac
done

if [ -n "$CHANGED_CRATES" ]; then
    for crate in $CHANGED_CRATES; do
        echo ">>> Checking $crate..."
        if ! cargo clippy -p "$crate" --all-features -- -D warnings; then
            echo -e "${RED}ERROR: Clippy found issues in $crate${NC}"
            exit 1
        fi
    done
fi
echo -e "${GREEN}Clippy check passed${NC}"

# Check for common issues in commit
echo ">>> Checking for debugging artifacts..."
if git diff --cached | grep -E '^\+.*\bdbg!\b|^\+.*\bprintln!\b.*DEBUG|^\+.*\btodo!\b|^\+.*\bunimplemented!\b' | grep -v '^#' > /dev/null 2>&1; then
    echo -e "${YELLOW}WARNING: Possible debugging artifacts detected (dbg!, DEBUG println!, todo!, unimplemented!)${NC}"
    echo "Please review your changes carefully."
    # Don't fail, just warn
fi

echo -e "${GREEN}Pre-commit checks passed!${NC}"
